@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SpaAndBeautyWebsite</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        
        <AuthorizeView Roles="Customer,Staff,Manager,Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="account">
                        <span class="bi bi-calendar-check-fill-nav-menu" aria-hidden="true"></span> Account
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        
        <AuthorizeView>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-calendar-check-fill-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
        
        <AuthorizeView>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="create-account">
                        <span class="bi bi-calendar-check-fill-nav-menu" aria-hidden="true"></span> Create Account
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

        <AuthorizeView Roles="Customer,Staff,Manager,Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="appointments">
                        <span class="bi bi-calendar-check-fill-nav-menu" aria-hidden="true"></span> Appointments
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="edit-users">
                        <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Edit Users
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        
        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="services">
                        <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Edit Services
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        
        <AuthorizeView Roles="Manager,Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="reviews">
                        <span class="bi bi-list-check" aria-hidden="true"></span> Manage Reviews
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

