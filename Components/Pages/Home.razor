@code {
    private int visibleReviews = 6;

    public class ReviewModel
    {
        public string Name { get; set; }
        public string Comment { get; set; }
        public int Rating { get; set; }
    }

    private List<ReviewModel> Reviews = new List<ReviewModel>();

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        var realReviews = await context.Review
            .Include(r => r.Customer)
            .OrderByDescending(r => r.ReviewId)
            .ToListAsync();

        foreach (var r in ((IEnumerable<Review>)realReviews).Reverse())
        {
            var displayModel = new ReviewModel
            {
                Name = r.Customer != null ? $"{r.Customer.FirstName} {r.Customer.LastName}" : "Guest",
                Comment = r.Description,
                Rating = r.Rating
            };
            Reviews.Insert(0, displayModel);
        }
    }

    private void ShowMore() { visibleReviews = Reviews.Count; }
    private void ShowLess() { visibleReviews = 6; }
}