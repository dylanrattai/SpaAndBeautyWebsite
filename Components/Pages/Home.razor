@code {
    private int visibleReviews = 6;
    private bool IsAuthenticated;
    private bool CanViewAppointments;

    public class ReviewModel
    {
        public required string Name { get; set; }
        public string Comment { get; set; }
        public int Rating { get; set; }
    }

    private class Service
    {
        public required string Name { get; set; }
        public required string Description { get; set; }
        public int Duration { get; set; }
        public decimal Price { get; set; }
    }

    private List<Service> services = new();
    private readonly List<ReviewModel> Reviews = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        var realReviews = await context.Review
            .Include(r => r.Customer)
            .Where(r => r.Status == "Approved" && r.Rating >= 7)
            .OrderByDescending(r => r.ReviewId)
            .Take(20)
            .ToListAsync();

        // Fetch Services
        services = await context.Service
            .Select(s => new Service
            {
                Name = s.Name,
                Description = s.Description,
                Duration = s.DurationMinutes,
                Price = s.DurationPrice
            })
            .ToListAsync();

        // Clear existing list just in case
        Reviews.Clear();

        // Populate the display model
        foreach (var r in realReviews)
        {
            var displayModel = new ReviewModel
            {
                Name = r.Customer != null ? $"{r.Customer.FirstName} {r.Customer.LastName}" : "Guest",
                Comment = r.Description,
                Rating = r.Rating
            };
            Reviews.Add(displayModel);
        }

        // Get auth info safely (avoids relying on a CascadingAuthenticationState)
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            IsAuthenticated = user?.Identity?.IsAuthenticated ?? false;

            if (IsAuthenticated)
            {
                CanViewAppointments =
                    user.IsInRole("Customer") ||
                    user.IsInRole("Staff") ||
                    user.IsInRole("Manager") ||
                    user.IsInRole("Admin");
            }
        }
        catch
        {
            IsAuthenticated = false;
            CanViewAppointments = false;
        }
    }

    private void ShowMore()
    {
        visibleReviews = Reviews.Count;
    }

    private void ShowLess()
    {
        visibleReviews = 6;
    }

}