@page "/businessinfo/delete"
@using Microsoft.EntityFrameworkCore
@using SpaAndBeautyWebsite.Models
@inject IDbContextFactory<SpaAndBeautyWebsite.Data.SpaAndBeautyWebsiteContext> DbFactory
@inject NavigationManager NavigationManager
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "RequireAdmin")]

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>BusinessInfo</h2>
    <hr />
    @if (businessinfo is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ItemType</dt>
            <dd class="col-sm-10">@businessinfo.ItemType</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@businessinfo.Description</dd>
        </dl>
        <EditForm method="post" Model="businessinfo" OnValidSubmit="DeleteBusinessInfo" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(businessinfo is null)">Delete</button> |
            <a href="/businessinfos">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private BusinessInfo? businessinfo;

    [SupplyParameterFromQuery]
    private int BusinessInfoId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        businessinfo = await context.BusinessInfo.FirstOrDefaultAsync(m => m.BusinessInfoId == BusinessInfoId);

        if (businessinfo is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteBusinessInfo()
    {
        using var context = DbFactory.CreateDbContext();
        context.BusinessInfo.Remove(businessinfo!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/businessinfos");
    }
}
