@page "/appointments/edit"
@using Microsoft.EntityFrameworkCore
@using SpaAndBeautyWebsite.Models
@inject IDbContextFactory<SpaAndBeautyWebsite.Data.SpaAndBeautyWebsiteContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Appointment</h2>
<hr />
@if (Appointment is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Appointment" OnValidSubmit="UpdateAppointment" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert" />

                @* HIDDEN INPUTS: Critical to keep these IDs associated when saving *@
                <input type="hidden" name="Appointment.AppointmentId" value="@Appointment.AppointmentId" />
                <input type="hidden" name="Appointment.EmployeeId" value="@Appointment.EmployeeId" />
                <input type="hidden" name="Appointment.CustomerId" value="@Appointment.CustomerId" />
                <input type="hidden" name="Appointment.ServiceId" value="@Appointment.ServiceId" />

                @* Display Employee Name (FirstName + LastName) *@
                <div class="mb-3">
                    <label class="form-label">Employee:</label>
                    <input type="text" class="form-control" value="@EmployeeName" disabled />
                </div>

                @* Display Customer Name (FirstName + LastName) *@
                <div class="mb-3">
                    <label class="form-label">Customer:</label>
                    <input type="text" class="form-control" value="@CustomerName" disabled />
                </div>

                @* Display Service Name *@
                <div class="mb-3">
                    <label class="form-label">Service:</label>
                    <input type="text" class="form-control" value="@ServiceName" disabled />
                </div>

                @* Display Date (Read Only - using readonly ensures the value is sent to server so validation passes) *@
                <div class="mb-3">
                    <label class="form-label">Scheduled Date:</label>
                    <InputDate @bind-Value="Appointment.ScheduledDateTime" class="form-control" readonly />
                </div>

                @* Display Duration (Read Only - using readonly ensures the value is sent to server so validation passes) *@
                <div class="mb-3">
                    <label class="form-label">Duration (Minutes):</label>
                    <InputNumber @bind-Value="Appointment.DurationMinutes" class="form-control" readonly />
                    <ValidationMessage For="() => Appointment.DurationMinutes" class="text-danger" />
                </div>

                @* Editable Status Dropdown - UPDATED OPTIONS TO MATCH VALIDATION *@
                <div class="mb-3">
                    <label for="status" class="form-label">Status:</label>
                    <InputSelect id="status" @bind-Value="Appointment.Status" class="form-control">
                        <option value="Scheduled">Scheduled</option>
                        <option value="Checked In">Checked In</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                        <option value="No Show">No Show</option>
                    </InputSelect>
                    <ValidationMessage For="() => Appointment.Status" class="text-danger" />
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/appointments">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int AppointmentId { get; set; }

    [SupplyParameterFromForm]
    private Appointment? Appointment { get; set; }

    // Variables to hold the names for display
    private string? EmployeeName;
    private string? CustomerName;
    private string? ServiceName;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();

        // 1. Load the Appointment
        // If this is a POST (save), Appointment is already populated from the form, but we need to fill in the blanks if needed.
        Appointment ??= await context.Appointment.FirstOrDefaultAsync(m => m.AppointmentId == AppointmentId);

        if (Appointment is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
        else
        {
            // 2. Look up the Employee (FirstName + LastName)
            var employee = await context.Employee.FindAsync(Appointment.EmployeeId);
            if (employee != null)
            {
                EmployeeName = $"{employee.FirstName} {employee.LastName}";
            }
            else
            {
                EmployeeName = "Unknown Employee";
            }

            // 3. Look up the Customer (FirstName + LastName)
            var customer = await context.Customer.FindAsync(Appointment.CustomerId);
            if (customer != null)
            {
                CustomerName = $"{customer.FirstName} {customer.LastName}";
            }
            else
            {
                CustomerName = "Unknown Customer";
            }

            // 4. Look up Service
            var service = await context.Service.FindAsync(Appointment.ServiceId);
            ServiceName = service?.Name ?? "Unknown Service";
        }
    }

    private async Task UpdateAppointment()
    {
        using var context = DbFactory.CreateDbContext();


        context.Attach(Appointment!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!AppointmentExists(Appointment!.AppointmentId))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/appointments");
    }

    private bool AppointmentExists(int appointmentid)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Appointment.Any(e => e.AppointmentId == appointmentid);
    }
}
